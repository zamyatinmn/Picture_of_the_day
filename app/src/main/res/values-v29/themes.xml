<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PictureOfTheDay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:forceDarkAllowed">true</item>

    </style>

      <style name="ChipStyle.Base" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">?colorOnPrimary</item>
        <item name="chipCornerRadius">40dp</item>
        <item name="fontFamily">@font/ubuntu</item>
    </style>

    <style name="WikiBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="passwordToggleEnabled">true</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_wiki</item>
        <item name="fontFamily">@font/ubuntu</item>
        <item name="background">?colorOnPrimary</item>
    </style>

    <!--    themes-->
    <style name="Theme.PictureOfTheDay.Moon">
        <item name="colorPrimary">@color/mischka</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/santas_gray</item>
        <item name="colorSecondary">@color/venus</item>
        <item name="colorOnSecondary">@color/maverick</item>
        <item name="colorSecondaryVariant">@color/old_lavender</item>
    </style>

    <style name="Theme.PictureOfTheDay.Mars">
        <item name="colorPrimary">@color/flame_pea</item>
        <item name="colorOnPrimary">@color/coral</item>
        <item name="colorPrimaryDark">@color/totem_pole</item>
        <item name="colorSecondary">@color/tamarind</item>
        <item name="colorOnSecondary">@color/congo_brown</item>
        <item name="colorSecondaryVariant">@color/diesel</item>
    </style>

    <style name="Theme.PictureOfTheDay.MilkyWay">
        <item name="colorPrimary">@color/ship_cove</item>
        <item name="colorOnPrimary">@color/perano</item>
        <item name="colorPrimaryDark">@color/chambray</item>
        <item name="colorSecondary">@color/jacarta</item>
        <item name="colorOnSecondary">@color/butterfly_bush</item>
        <item name="colorSecondaryVariant">@color/stratos</item>
    </style>
</resources>